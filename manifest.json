{
	"manifest_version": 2,
	"name": "Browser Bot",
	"description": "A generic extension that does anything you want",
	"version": "0.1",
	"icons": {"256": "icon.png"},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"run_at": "document_end",
			"js": [
				"core/vendor/jSpaghetti.min.js",
				"core/vendor/BrowserConsole.js",

				"core/extension/Browser.js",

				"platforms/Jira.js",

				"mybot/UI.js",

				"mybot/hooks.js",
				"mybot/Bot.js",

				"core/extension/Message.js",
				"core/extension/BackgroundStorage.js",

				"modules/jiraModule.js",


				"main.js"
			]
		}
	],
	"background": {
		"scripts": [
			"core/vendor/BrowserConsole.js",
			"core/extension/Browser.js",
			"core/extension/Message.js",
			"mybot/background.js"
		],
		"persistent": true
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "mybot/index.html",
		"default_title": "Bot"
	}
}
